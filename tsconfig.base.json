{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vextjs/bridge": ["packages/bridge/src/index.ts"],
      "@vextjs/emulator": ["packages/emulator/src/index.ts"],
      "@vextjs/vite-plugin": ["packages/vite-plugin/src/index.ts"],
      "@vextjs/vue": ["packages/vue/src/index.ts"],
      "@vextjs/vuic-compiler": ["packages/vuic-compiler/src/index.ts"],
      "@vextjs/webpack-plugin": ["packages/webpack-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
